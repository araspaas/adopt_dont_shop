<h1>All Pets From: <%= "#{@shelter.name}" %></h1>

<section class="pets_list">
  <% @pets.each do |pet| %>
    <li><%= pet.name %><br>
    <%= pet.image %><br>
    <%= pet.age %><br>
    <%= pet.sex %><br>
    <%= pet.shelter_id %><br><br>
  <% end %>
  <%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new" %><br><br>
  <%= link_to "Back To Shelters", "/shelters" %>
</section>
